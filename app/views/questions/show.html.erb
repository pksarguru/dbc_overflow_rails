<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @question.body %>
</p>

<p>
<%= link_to 'Add a Comment', new_question_comment_path(@question) %>
</p>

<strong>Add an Answer:</strong>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% @question.answers.each do |ans| %>
<p>
  <% if ans.persisted? %>
    <%= ans.title %><br>
    <%= ans.body %>
    <%= link_to 'Add a Comment', new_question_answer_comment_path(ans) %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
